<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/fragment_padding">


    <TextView
        android:id="@+id/details_title_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top"
        android:text="title"
        android:textSize="@dimen/title_size_details"
        app:layout_constraintRight_toLeftOf="@+id/details_is_like_movie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/details_is_like_movie"
        android:layout_width="@dimen/heart_width"
        android:layout_height="@dimen/heart_width"
        android:layout_margin="@dimen/heart_margin"
        android:src="@drawable/ic_baseline_favorite_border_24_empty"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/details_title_movie" />

    <TextView
        android:id="@+id/details_original_title_movie"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_height"
        android:text="title"
        android:textSize="@dimen/original_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_title_movie" />

    <ImageView
        android:id="@+id/details_banner_movie"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_original_title_movie" />

    <TextView
        android:id="@+id/details_genre_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fragment_padding"
        android:text="title"
        android:textSize="@dimen/description_text_size"
        app:layout_constraintLeft_toRightOf="@+id/details_banner_movie"
        app:layout_constraintTop_toTopOf="@+id/details_banner_movie" />

    <TextView
        android:id="@+id/details_duration_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fragment_padding"
        android:text="title"
        android:textSize="@dimen/description_text_size"
        app:layout_constraintLeft_toRightOf="@+id/details_banner_movie"
        app:layout_constraintTop_toBottomOf="@+id/details_genre_movie" />

    <TextView
        android:id="@+id/details_rating_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fragment_padding"
        android:text="title"
        android:textSize="@dimen/description_text_size"
        app:layout_constraintLeft_toRightOf="@+id/details_banner_movie"
        app:layout_constraintTop_toBottomOf="@+id/details_duration_movie" />

    <ImageView
        android:id="@+id/details_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_star_24"
        app:layout_constraintLeft_toRightOf="@+id/details_rating_movie"
        app:layout_constraintTop_toTopOf="@+id/details_rating_movie" />

    <TextView
        android:id="@+id/details_year_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fragment_padding"
        android:text="title"
        android:textSize="@dimen/description_text_size"
        app:layout_constraintLeft_toRightOf="@+id/details_banner_movie"
        app:layout_constraintTop_toBottomOf="@+id/details_rating_movie" />

    <TextView
        android:id="@+id/details_budget_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fragment_padding"
        android:text="title"
        android:textSize="@dimen/description_text_size"
        app:layout_constraintLeft_toRightOf="@+id/details_banner_movie"
        app:layout_constraintTop_toBottomOf="@+id/details_year_movie" />

    <TextView
        android:id="@+id/details_revenue_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fragment_padding"
        android:text="title"
        android:textSize="@dimen/description_text_size"
        app:layout_constraintLeft_toRightOf="@+id/details_banner_movie"
        app:layout_constraintTop_toBottomOf="@+id/details_budget_movie" />

    <TextView
        android:id="@+id/details_description_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="@dimen/description_text_size"
        app:layout_constraintLeft_toLeftOf="@+id/details_banner_movie"
        app:layout_constraintTop_toBottomOf="@+id/details_banner_movie" />


</androidx.constraintlayout.widget.ConstraintLayout>